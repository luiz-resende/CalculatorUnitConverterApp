<?xml version="1.0" encoding="utf-8"?>
<selector
    xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:state_pressed="false"
        android:state_focused="false">

        <shape
            android:shape="rectangle"
            android:useLevel="false">

            <size
                android:height="24sp"
                android:width="24sp"/>
            <corners android:radius="5dp" />
            <solid android:color="@color/custom_dk_green" />
            <!--solid android:color="@color/dk_grey" /-->

            <padding
                android:bottom="5dp"
                android:left="5dp"
                android:right="5dp"
                android:top="5dp" />
        </shape>
    </item>

    <item
        android:state_pressed="false"
        android:state_focused="true" >
        <shape
            android:shape="rectangle"
            android:useLevel="false">

            <size
                android:height="24sp"
                android:width="24sp"/>
            <corners android:radius="5dp" />
            <solid android:color="@color/custom_dk_green_light" />
            <!--solid android:color="@color/dk_grey" /-->

            <padding
                android:bottom="5dp"
                android:left="5dp"
                android:right="5dp"
                android:top="5dp" />
        </shape>
    </item>

    <item
        android:state_pressed="true"
        android:state_focused="false" >
        <shape
            android:shape="rectangle"
            android:useLevel="false">

            <size
                android:height="24sp"
                android:width="24sp"/>
            <corners android:radius="5dp" />
            <solid android:color="@color/custom_dk_green_light" />
            <!--solid android:color="@color/dk_grey" /-->

            <padding
                android:bottom="5dp"
                android:left="5dp"
                android:right="5dp"
                android:top="5dp" />
        </shape>
    </item>

</selector>
