<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/scrollView_layout_dilution_calculator"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="parent"
    tools:context=".ui.dilution.DilutionCalculatorFragment"
    tools:ignore="UselessParent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraint_layout_dilution_calculator"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".ui.dilution.DilutionCalculatorFragment">


        <LinearLayout
            android:id="@+id/linear_layout_dilution_row1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:id="@+id/linear_layout_dilution_row1_padding1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.10"
                android:orientation="horizontal" />

            <Switch
                android:id="@+id/dilution_switch_btn_init_final_volume"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.40"
                android:checked="false"
                android:gravity="center"
                android:text="@string/dilution_switch_button_volume_text"
                android:textSize="12sp"
                tools:ignore="UseSwitchCompatOrMaterialXml" />

            <LinearLayout
                android:id="@+id/linear_layout_dilution_row1_padding2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.10"
                android:orientation="horizontal" />

            <Switch
                android:id="@+id/dilution_switch_btn_solvent_ingredient"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.30"
                android:checked="false"
                android:gravity="center"
                android:text="@string/dilution_switch_button_solvent_text_1"
                android:textSize="12sp"
                tools:ignore="UseSwitchCompatOrMaterialXml" />

            <LinearLayout
                android:id="@+id/linear_layout_dilution_row1_padding3"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.10"
                android:orientation="horizontal" />

        </LinearLayout>


        <LinearLayout
            android:id="@+id/linear_layout_dilution_row2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:orientation="horizontal"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linear_layout_dilution_row1">

            <LinearLayout
                android:id="@+id/linear_layout_dilution_row2_padding1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.05"
                android:orientation="horizontal" />

            <TextView
                android:id="@+id/dilution_textView_01"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.625"
                android:gravity="center"
                android:text="@string/dilution_vol_initial"
                android:textSize="14sp"
                tools:ignore="MissingConstraints" />

            <LinearLayout
                android:id="@+id/linear_layout_dilution_row2_padding2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.05"
                android:orientation="horizontal" />

            <EditText
                android:id="@+id/dilution_textView_init_volume"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.225"
                android:ems="10"
                android:gravity="center"
                android:hint="@string/dilution_vol_initial_hint"
                android:inputType="numberDecimal"
                android:textSize="14sp"
                tools:ignore="Autofill,LabelFor,MissingConstraints" />

            <LinearLayout
                android:id="@+id/linear_layout_dilution_row2_padding3"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.05"
                android:orientation="horizontal" />

        </LinearLayout>


        <LinearLayout
            android:id="@+id/linear_layout_dilution_row3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linear_layout_dilution_row2">

            <LinearLayout
                android:id="@+id/linear_layout_dilution_row3_padding1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.05"
                android:orientation="horizontal" />

            <TextView
                android:id="@+id/dilution_textView_02"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.625"
                android:gravity="center"
                android:text="@string/dilution_concen_initial"
                android:textSize="14sp"
                tools:ignore="MissingConstraints" />

            <LinearLayout
                android:id="@+id/linear_layout_dilution_row3_padding2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.05"
                android:orientation="horizontal" />

            <EditText
                android:id="@+id/dilution_textView_init_concen"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.225"
                android:ems="10"
                android:gravity="center"
                android:hint="@string/dilution_concen_initial_hint"
                android:inputType="numberDecimal"
                android:textSize="14sp"
                tools:ignore="Autofill,LabelFor,MissingConstraints" />

            <LinearLayout
                android:id="@+id/linear_layout_dilution_row3_padding3"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.05"
                android:orientation="horizontal" />

        </LinearLayout>


        <LinearLayout
            android:id="@+id/linear_layout_dilution_row4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linear_layout_dilution_row3">

            <LinearLayout
                android:id="@+id/linear_layout_dilution_row4_padding1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.05"
                android:orientation="horizontal" />

            <TextView
                android:id="@+id/dilution_textView_03"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.625"
                android:gravity="center"
                android:text="@string/dilution_concen_target"
                android:textSize="14sp" />

            <LinearLayout
                android:id="@+id/linear_layout_dilution_row4_padding2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.05"
                android:orientation="horizontal" />

            <EditText
                android:id="@+id/dilution_textView_final_concen"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.225"
                android:ems="10"
                android:gravity="center"
                android:hint="@string/dilution_concen_target_hint"
                android:inputType="numberDecimal"
                android:textSize="14sp"
                tools:ignore="Autofill,LabelFor,MissingConstraints" />

            <LinearLayout
                android:id="@+id/linear_layout_dilution_row4_padding3"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.05"
                android:orientation="horizontal" />

        </LinearLayout>


        <LinearLayout
            android:id="@+id/linear_layout_dilution_row5_buttons"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginTop="24dp"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linear_layout_dilution_row4">

            <TextView
                android:id="@+id/dilution_result_dilution"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.425"
                android:gravity="center"
                android:text="@string/dilution_vol_result"
                android:textSize="22sp"
                android:textStyle="bold" />

            <LinearLayout
                android:id="@+id/linear_layout_dilution_row5_buttons_padding1"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.15"
                android:orientation="horizontal" />

            <TextView
                android:id="@+id/dilution_result_total_volume"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.425"
                android:gravity="center"
                android:text="@string/dilution_vol_total"
                android:textSize="22sp"
                android:textStyle="bold" />

        </LinearLayout>


        <View
            android:id="@+id/divider_layout_dilution"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="36dp"
            android:background="?android:attr/listDivider"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linear_layout_dilution_row5_buttons"
            tools:ignore="MissingConstraints" />


        <LinearLayout
            android:id="@+id/linear_layout_dilution_row6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="36dp"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/divider_layout_dilution">

            <LinearLayout
                android:id="@+id/linear_layout_dilution_row6_padding1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.1"
                android:orientation="horizontal" />

            <Button
                android:id="@+id/dilution_solve_btn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.4"
                android:background="@drawable/ic_dilution_button"
                android:fontFamily="@font/lato_bold"
                android:gravity="center"
                android:text="@string/dilution_calculate_button"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:textStyle="bold" />

            <LinearLayout
                android:id="@+id/linear_layout_dilution_row6_padding2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.1"
                android:orientation="horizontal" />

            <Button
                android:id="@+id/dilution_clear_btn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.30"
                android:background="@drawable/ic_dilution_button"
                android:fontFamily="@font/lato_bold"
                android:gravity="center"
                android:text="@string/dilution_erase_button"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:textStyle="bold" />

            <LinearLayout
                android:id="@+id/linear_layout_dilution_row6_padding3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.1"
                android:orientation="horizontal" />

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>